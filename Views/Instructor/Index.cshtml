@model IEnumerable<PareITELEC1C.Models.Instructor>

<h1>Instructor</h1>

<table class="table table-dark">
    <tr>
        <th>Name</th>
        <th>Rank</th>
        <th>Hiring Date</th>
        <th>IsTenured</th>
        <th>Details</th>
        <td>Update</td>
    </tr>

   @foreach(var Instructor in Model)
    {
        <tr>
           <td>@Instructor.InstructorFirstName @Instructor.InstructorLastName</td>
           <td>@Instructor.InstructorRank</td>
           <td>@Instructor.DateHired</td>
           <td>@Instructor.IsTenured</td>
            <td><a asp-action="ShowDetail" asp-route-id="@Instructor.InstructorId" class="btn btn-primary">Show Details</a></td>
            <td><a asp-action="UpdateInstructor" asp-route-id="@Instructor.InstructorId" class="btn btn-primary">Update Instructor</a></td>
        </tr>
 }

   
</table>