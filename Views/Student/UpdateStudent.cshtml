@model Student;
<h1>Update Student</h1>

<form asp-action="UpdateStudent" asp-controller="Student" method="post">
    <div class="form-group">
        <label asp-for="StudentFirstName">First Name</label>
        <input asp-for="StudentFirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="StudentLastName">Last Name</label>
        <input asp-for="StudentLastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Course">Course</label>
        <select asp-for="Course" asp-items="@Html.GetEnumSelectList(typeof(Course))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="DateEnrolled">Date of Admission</label>
        <input asp-for="DateEnrolled" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email address</label>
        <input class="form-control" aria-describedby="emailHelp" placeholder="example@AppDomain.com" />
    </div>

    <div class="form-group">
        <label asp-for="GPA">GPA</label>
        <input asp-for="GPA" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>