@model IEnumerable<Student>;

<h1> Student List </h1>
<table class="table table-dark">
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Course</td>
        <td>Admission Date</td>
        <td>Email</td>
        <td>GPA</td>
        <td>Details</td>
        <td>Update</td>
    </tr>

    @foreach (var Student in Model)
    {
        <tr>
            <td>@Student.StudentId</td>
            <td>@Student.StudentFirstName @Student.StudentLastName</td>
            <td>@Student.Course</td>
            <td>@Student.DateEnrolled</td>
            <td>@Student.Email</td>
            <td>@Student.GPA</td>
            <td><a asp-action="ShowDetail" asp-route-id="@Student.StudentId" class="btn btn-primary">Show Details</a></td>
            <td><a asp-action="UpdateStudent" asp-route-id="@Student.StudentId" class="btn btn-primary">Update Student</a></td>
        </tr>
    }

</table>


